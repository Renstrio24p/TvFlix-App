{
  "compilerOptions": {
    "target": "es2020",
    "moduleDetection": "auto",
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "removeComments": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "noEmit": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnusedLabels": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*",
    "vite-env.d.ts"
  ]
}